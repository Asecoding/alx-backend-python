#!/bin/bash

# kurbeScript: Start and verify a local Kubernetes cluster using Minikube

echo "ğŸ” Checking for Minikube installation..."
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it from https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

echo "ğŸ” Checking for kubectl installation..."
if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl is not installed. Please install it from https://kubernetes.io/docs/tasks/tools/"
    exit 1
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube cluster."
    exit 1
fi

echo "âœ… Minikube cluster started."

echo "ğŸ” Verifying cluster status with kubectl..."
kubectl cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ kubectl could not connect to the cluster."
    exit 1
fi

echo "âœ… Cluster is running."

echo "ğŸ“¦ Retrieving available pods in all namespaces..."
kubectl get pods --all-namespaces

echo "ğŸ‰ kurbeScript completed successfully."

